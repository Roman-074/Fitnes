<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/toolbar_profile_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layout_background_gradient_blue"
                        android:paddingBottom="@dimen/_8sdp">

                        <ImageView
                            android:id="@+id/profile_edit_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/_14sdp"
                            android:src="@drawable/profile_icon_edit"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/avatar"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:riv_oval="true"
                            android:src="@drawable/reg_photo_img_src_person" />

                        <TextView
                            android:id="@+id/name_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/name"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintStart_toEndOf="@id/avatar"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/empty"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintStart_toEndOf="@id/name_title"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_goneMarginStart="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/old_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/old"

                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintStart_toEndOf="@id/avatar"
                            app:layout_constraintTop_toBottomOf="@+id/name" />

                        <TextView
                            android:id="@+id/old"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/empty"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintStart_toEndOf="@+id/old_title"
                            app:layout_constraintTop_toBottomOf="@+id/name"
                            app:layout_goneMarginStart="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/tall_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/tall"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintStart_toEndOf="@id/avatar"
                            app:layout_constraintTop_toBottomOf="@+id/old" />

                        <TextView
                            android:id="@+id/tall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/empty"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintBottom_toBottomOf="@id/tall_title"
                            app:layout_constraintStart_toEndOf="@+id/tall_title" />

                        <TextView
                            android:id="@+id/curr_weight_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/current_weight"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintStart_toEndOf="@id/avatar"
                            app:layout_constraintTop_toBottomOf="@id/tall_title" />

                        <TextView
                            android:id="@+id/curr_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/empty"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintBottom_toBottomOf="@id/curr_weight_title"
                            app:layout_constraintStart_toEndOf="@+id/curr_weight_title" />

                        <TextView
                            android:id="@+id/goal_weight_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/goal_weight"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintStart_toEndOf="@id/avatar"
                            app:layout_constraintTop_toBottomOf="@id/curr_weight_title" />

                        <TextView
                            android:id="@+id/goal_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/empty"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintBottom_toBottomOf="@id/goal_weight_title"
                            app:layout_constraintStart_toEndOf="@+id/goal_weight_title" />

                        <TextView
                            android:id="@+id/level_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/level"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintStart_toEndOf="@id/avatar"
                            app:layout_constraintTop_toBottomOf="@id/goal_weight_title" />

                        <TextView
                            android:id="@+id/level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/empty"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintBottom_toBottomOf="@id/level_title"
                            app:layout_constraintStart_toEndOf="@+id/level_title" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layout_background_gradient_blue"
                        android:paddingBottom="@dimen/_8sdp">
                        <!--Кривые цифры-->
                        <TextView
                            android:id="@+id/diary_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_black"
                            android:text="@string/diary"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/mon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/mon"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintEnd_toStartOf="@id/tue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/diary_title" />

                        <TextView
                            android:id="@+id/tue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/tue"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintEnd_toStartOf="@id/wed"
                            app:layout_constraintStart_toEndOf="@+id/mon"
                            app:layout_constraintTop_toTopOf="@+id/mon" />

                        <TextView
                            android:id="@+id/wed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/wed"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintEnd_toStartOf="@+id/thu"
                            app:layout_constraintStart_toEndOf="@+id/tue"
                            app:layout_constraintTop_toTopOf="@+id/tue" />

                        <TextView
                            android:id="@+id/thu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/thu"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintEnd_toStartOf="@+id/fri"
                            app:layout_constraintStart_toEndOf="@+id/wed"
                            app:layout_constraintTop_toTopOf="@+id/wed" />

                        <TextView
                            android:id="@+id/fri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/fri"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintEnd_toStartOf="@+id/sat"
                            app:layout_constraintStart_toEndOf="@+id/thu"
                            app:layout_constraintTop_toTopOf="@+id/thu" />

                        <TextView
                            android:id="@+id/sat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/sat"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintEnd_toStartOf="@+id/sun"
                            app:layout_constraintStart_toEndOf="@+id/fri"
                            app:layout_constraintTop_toTopOf="@+id/fri" />

                        <TextView
                            android:id="@+id/sun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/sun"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/sat"
                            app:layout_constraintTop_toTopOf="@+id/sat" />

                        <TextView
                            android:id="@+id/mon_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintEnd_toEndOf="@+id/mon"
                            app:layout_constraintStart_toStartOf="@+id/mon"
                            app:layout_constraintTop_toBottomOf="@id/mon"
                            tools:background="@drawable/profile_current_date_background_elipse"
                            tools:text="25" />

                        <TextView
                            android:id="@+id/tue_date"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/mon_date"
                            app:layout_constraintEnd_toEndOf="@+id/tue"
                            app:layout_constraintStart_toStartOf="@+id/tue"
                            app:layout_constraintTop_toBottomOf="@+id/tue"
                            tools:text="6" />

                        <TextView
                            android:id="@+id/wed_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/tue_date"
                            app:layout_constraintEnd_toEndOf="@+id/wed"
                            app:layout_constraintStart_toStartOf="@+id/wed"
                            app:layout_constraintTop_toBottomOf="@+id/wed"
                            tools:text="7" />

                        <TextView
                            android:id="@+id/thu_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/wed_date"
                            app:layout_constraintEnd_toEndOf="@+id/thu"
                            app:layout_constraintStart_toStartOf="@+id/thu"
                            app:layout_constraintTop_toBottomOf="@+id/thu"
                            tools:text="8" />

                        <TextView
                            android:id="@+id/fri_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/thu_date"
                            app:layout_constraintEnd_toEndOf="@+id/fri"
                            app:layout_constraintStart_toStartOf="@+id/fri"
                            app:layout_constraintTop_toBottomOf="@+id/fri"
                            tools:text="9" />

                        <TextView
                            android:id="@+id/sat_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"

                            app:layout_constraintBottom_toBottomOf="@+id/fri_date"
                            app:layout_constraintEnd_toEndOf="@+id/sat"
                            app:layout_constraintStart_toStartOf="@+id/sat"
                            app:layout_constraintTop_toBottomOf="@+id/sat"
                            tools:text="10" />

                        <TextView
                            android:id="@+id/sun_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"

                            app:layout_constraintBottom_toBottomOf="@+id/sat_date"
                            app:layout_constraintEnd_toEndOf="@+id/sun"
                            app:layout_constraintStart_toStartOf="@+id/sun"
                            app:layout_constraintTop_toBottomOf="@+id/sun"
                            tools:text="11" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layout_background_gradient_blue"
                        android:paddingBottom="@dimen/_8sdp">

                        <TextView
                            android:id="@+id/workout_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/raleway_black"
                            android:text="@string/workout"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/time_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            app:layout_constraintEnd_toStartOf="@+id/calories_tv"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/workout_title"
                            app:srcCompat="@drawable/profile_img_src_time" />

                        <ImageView
                            android:id="@+id/calories_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toBottomOf="@+id/time_iv"
                            app:layout_constraintEnd_toStartOf="@+id/score_iv"
                            app:layout_constraintStart_toEndOf="@+id/time_iv"
                            app:srcCompat="@drawable/profile_img_src_calories" />

                        <ImageView
                            android:id="@+id/score_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@+id/time_iv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/calories_tv"
                            app:srcCompat="@drawable/profile_img_src_score" />

                        <TextView
                            android:id="@+id/time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/empty"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintEnd_toEndOf="@+id/time_iv"
                            app:layout_constraintStart_toStartOf="@+id/time_iv"
                            app:layout_constraintTop_toBottomOf="@+id/time_iv" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:fontFamily="@font/raleway_regular"
                            android:text="@string/duration"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp"
                            app:layout_constraintEnd_toEndOf="@+id/time_text"
                            app:layout_constraintStart_toStartOf="@+id/time_text"
                            app:layout_constraintTop_toBottomOf="@+id/time_text" />

                        <TextView
                            android:id="@+id/calories_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/empty"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintEnd_toEndOf="@+id/calories_tv"
                            app:layout_constraintStart_toStartOf="@+id/calories_tv"
                            app:layout_constraintTop_toBottomOf="@+id/calories_tv" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:fontFamily="@font/raleway_regular"
                            android:text="@string/calories"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp"
                            app:layout_constraintEnd_toEndOf="@+id/calories_text"
                            app:layout_constraintStart_toStartOf="@+id/calories_text"
                            app:layout_constraintTop_toBottomOf="@+id/calories_text" />

                        <TextView
                            android:id="@+id/score_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="@string/empty"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:layout_constraintEnd_toEndOf="@+id/score_iv"
                            app:layout_constraintStart_toStartOf="@+id/score_iv"
                            app:layout_constraintTop_toBottomOf="@+id/score_iv" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:fontFamily="@font/raleway_regular"
                            android:text="@string/points"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp"
                            app:layout_constraintEnd_toEndOf="@+id/score_text"
                            app:layout_constraintStart_toStartOf="@+id/score_text"
                            app:layout_constraintTop_toBottomOf="@+id/score_text" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

<!--                TODO сделать активити-->

<!--                <androidx.cardview.widget.CardView-->
