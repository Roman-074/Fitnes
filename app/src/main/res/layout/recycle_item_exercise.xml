<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_16sdp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recycle_item_exercise_background">

        <TextView
            android:id="@+id/exercise_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:fontFamily="@font/righteous_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/repetitions"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginBottom="@dimen/_16sdp"
            app:layout_goneMarginStart="@dimen/_16sdp"
            tools:text="1. Arm stretches" />

        <TextView
            android:id="@+id/repetitions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exercise_title"
            android:textColor="@color/text_blue"
            android:fontFamily="@font/raleway_semibold"
            android:textSize="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            tools:text="x3" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/approaches_iv"
            app:layout_goneMarginStart="@dimen/_16sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:src="@drawable/item_exercise_img_src_aproaches"
            app:layout_constraintBottom_toBottomOf="@+id/repetitions"
            app:layout_constraintStart_toEndOf="@+id/repetitions"
            app:layout_constraintTop_toTopOf="@+id/repetitions"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/approaches_tv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@+id/approaches_iv"
            app:layout_constraintStart_toEndOf="@id/approaches_iv"
            app:layout_constraintTop_toTopOf="@+id/approaches_iv"
            app:layout_constraintVertical_bias="1.0"
            tools:text="5" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>